

    <div class="user-posted-info" style="margin-top: 1rem;">
      <div class="user-posted">
        <% if comment.user.avatar.attached? %>
           <%= image_tag(comment.user.avatar, class: "profile-pic", style: "height: 2rem; width: 2rem; border-radius: 100%;")%>
        <% end %>
        <div style="white-space: nowrap; "><%= comment.user.displayname %></div>
        <div class="name-card-buttons">
          <% if comment.user == current_user%>
            <%= button_to comment, method: :delete, class: "destroy-button" do%>
              <%= render "groups/destroy-svg" %>
            <% end %>
          <% end %>
      </div>
      </div>

      <div>   <p> <%=  time_ago_in_words_with_units(comment.created_at) %></p> </div>
    </div>

       <%= comment.body %>
       <hr style="margin: .5rem 0px; ">

