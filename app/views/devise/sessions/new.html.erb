
<div class="info-section">
  <div class="logo">
    <%= image_tag ("full_logo.svg")%>
  </div>
  <div class="motto">Connect, Share, and Circle Up with Others!</div>
</div>

<div class="input-section">
  <div class="form-area">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in",  class: "log-button" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-pass" %>
        <hr>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-button" %>
      </div>
    <% end %>

  </div>
</div>
