<!DOCTYPE html>
<html>
  <head>
    <title>Circulate</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "forms", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "home", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>
  </head>

  <body class="controller-<%= params[:controller] %>">
    <% if !current_page?(new_user_session_path) && !current_page?(new_user_registration_path) && !current_page?(search_path) %>
      <%= render "layouts/navbar" %>
    <% end %>
    <%= yield %>
  </body>

</html>
